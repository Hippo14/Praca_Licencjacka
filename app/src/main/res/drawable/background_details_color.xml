<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/backgroundStartColor"
                android:centerColor="@color/backgroundCenterColor"
                android:endColor="@color/backgroundEndColor"
                android:angle="135"/>

            <stroke
                android:width="2dp"
                android:color="@color/detailsBorder" >
            </stroke>

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp">
            </padding>

            <corners
                android:radius="11dp">
            </corners>
        </shape>
    </item>
</selector>