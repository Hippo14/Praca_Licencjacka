<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:srcCompat="@drawable/partyhub"
        android:id="@+id/logo"
        android:layout_weight="0.2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
    >
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/events"
            android:adjustViewBounds="true"
            android:id="@+id/events"
            android:layout_margin="10dp"
            />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tevents"
            android:id="@+id/tevents"
            android:layout_width="64dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
    >
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/manage"
            android:adjustViewBounds="true"
            android:id="@+id/manage"
            android:layout_margin="12dp" />

        <ImageView
            android:layout_width="64dp"
            app:srcCompat="@drawable/tmanage"
            android:id="@+id/tmanage"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        >
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/settings"
            android:adjustViewBounds="true"
            android:id="@+id/settings"
            android:layout_margin="12dp" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tsettings"
            android:id="@+id/tsettings"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>